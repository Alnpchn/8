#include<locale.h>
#include <stdio.h>
#include <math.h>

int main()
{
	setlocale(LC_ALL, "RUS");
	double n;
	double x;
	double result = 0.0;
	int i;
	while (1) {
		printf("Введите N > 0\n");
		scanf("%lf", &n);
		printf("Введите [x > -1.0; x < 1.0] :\n");
		scanf("%lf", &x);
		if (x <= 1.0 && x >= -1.0 && n > 0) {
			for (i = 1; i <= n; i++) {
				result += pow(cos(x), i);
			}
			printf("result = %lf", result); // вывод значения суммы
			getchar();
			getchar();
			return 0;
		}
		printf("Incorrect X or N retly:\n");
	}

}
